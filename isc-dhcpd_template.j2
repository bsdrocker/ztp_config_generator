
# Host {{ hostname }} added by ztp script
host {{ hostname }} {
	hardware ethernet {{ mac_address }};
	fixed-address {{ mgmt_ip }};
	option option-150 10.0.0.5;
	option host-name "{{ hostname }}-dhcp";
	option log-servers {{ syslog_server }};
	option ntp-servers {{ ntp_server }};
	option ztplab.image-file-name "{{ junos_image }}";
	option ztplab.transfer-mode "http";
	option ztplab.config-file-name "{{ hostname }}.conf";
}
# End {{ hostname }} section

